
{
    static with inherited _ = std Module;
    protected module = $;

    protected astTypes => module ast types;

    protected with switch = $ switch;

    IsConstant: ast => (
        (Switch: ast type)
          ~ case: astTypes Constant do: [ ^ true                   ]
          ~ case: astTypes Block    do: [ ^ true                   ]
          ~ case: astTypes Scope    do: [ ^ IsConstant: (ast body) ]
          ~ default: [ ^ false ]
        ~ end
    );
}
