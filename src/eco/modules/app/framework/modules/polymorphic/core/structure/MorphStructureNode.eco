
{
    static with inherited _ = std Classlike;

    own Instance = {
        static with inherited _ = std Clonable;

        morph, parent, children;

        with inherited trait = {
            static with inherited _ = std Trait;
            protected polymorphic = $package;

            initWithMorph: _morph => (
                morph    <- _morph.
                parent   <- ((polymorphic core) structure parent) NoParent.
                children <- ((polymorphic core) structure children) ManyChildren.
              ^ self
            );

            writeOn: w => w << 'a polymorph structure node';
        };
    };

    NewForMorph: morph => Instance clone initWithMorph: morph;
}
