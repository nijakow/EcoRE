
std Module
{
    Behavior <- ($package core) NewBehavior
                    ~ presenterFunction: $[ :stream :kernel |
                        stream << 'a hand'.
                    ]
                    ~ build;

    State :: Classlike {
        Instance :: Clonable
        {
            |
                position,
                grabbedMorph,
            |

            {
                protected polymorphic <- $package;

                init => (
                    position     <- (polymorphic math geometry) Point Origin.
                    grabbedMorph <- No.
                  ^ self
                );

                moveToX: x Y: y => (
                    position <- (polymorphic math geometry) Point X: x Y: y.
                  ^ self
                );

                writeOn: w => w << 'a hand';
            }
        };

        New => Instance new;
    };

    New => Behavior link: (State New);
}
