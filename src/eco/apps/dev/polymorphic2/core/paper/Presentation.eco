
{
    isa std Classlike;

    Instance :: Clonable
    {
        |
            bounds,
            object
        |

        {
            bounds: b object: obj => (
                bounds <- b.
                object <- obj.
              ^ self
            );

            offset => bounds origin;

            renderOn: renderer => object renderAt: offset On: renderer;

            writeOn: w => w << 'a presentation';
        }
    };

    Object: object Bounds: bounds  => (Instance clone) bounds: bounds object: object;
}
