
{
    static with inherited _ = std Classlike;

    own Instance = {
        static with inherited _ = std Clonable;

        protected program;

        with inherited trait = {
            static with inherited _ = std Trait;
            protected polymorphic = $package;

            init => (
                program <- ((polymorphic core paper) PaperProgram) New.
              ^ self
            );

            "Place a morph kernel on the paper at the given bounds."
            place: morphKernel bounds: bounds => (
                program place: morphKernel bounds: bounds.
              ^ self
            );

            renderOn: renderer => (
                | paperProgramRenderer <- ((polymorphic core paper) PaperProgramRenderer) Renderer: renderer |

                program playOn: paperProgramRenderer.

              ^ self
            );
            
            writeOn: w => w << 'a sheet of paper';
        };
    };

    New => Instance new;
}
