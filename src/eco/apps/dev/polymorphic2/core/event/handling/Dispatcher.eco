
{
    isa std Classlike;

    Instance :: Clonable
    {
        |
            rules
        |

        {
            protected polymorphic <- $package;

            init => (
                rules <- std util newVector.
              ^ self
            );

            addRule: rule => (
                rules add: rule.
              ^ self
            );

            handle: event => (
                rules do: [ :rule |
                    rule
                        runWithEvent: event
                           OnSuccess: [ :v | ^ (((polymorphic core event) handling) results Success) Value: v ]
                ].
              ^ ((polymorphic core event) handling) results Failure
            );

            writeOn: w => w << 'an event dispatcher';
        }
    };

    New => Instance new;
}
