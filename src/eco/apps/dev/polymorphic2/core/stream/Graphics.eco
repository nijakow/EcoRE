
{
    isa std Classlike;

    Instance :: Clonable
    {
        |
            emitter,
            bounds
        |

        {
            emitter: e bounds: b => (
                emitter <- e.
                bounds <- b.
              ^ self
            );

            at: offset put: object => (
                emitter at: (bounds origin + offset) emit: object.
              ^ self
            );

            writeOn: w => w << 'a graphics stream';
        }
    };

    Emitter: emitter Bounds: bounds => (Instance clone) emitter: emitter bounds: bounds;
}
