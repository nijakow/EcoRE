
{
    isa std Classlike;

    Instance :: Clonable
    {
        |
            behavior,
            state
        |
        
        {
            initWithBehavior: b State: s => (
                behavior <- b.
                state <- s.
              ^ self
            );

            emitOnStream: stream => stream emitMorphKernel: self;

            writeOn: w => w << 'a morph kernel';
        }
    };

    Behavior: behavior State: state => (Instance new) initWithBehavior: behavior State: state;
}
