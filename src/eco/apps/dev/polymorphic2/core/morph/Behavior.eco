
{
    static with inherited _ = std Classlike;

    own Instance = {
        static with inherited _ = std Clonable;

        with inherited trait = {
            static with inherited _ = std Trait;
            protected polymorphic = $package;
             
            init => (
              ^ self
            );

            link: seed => (
                | state <- ((polymorphic core morph) State) Seed: seed |

              ^ ((polymorphic core morph) Kernel) Behavior: self
                                                     State: state
            );

            link => (
                | state <- ((polymorphic core morph) State) New |

              ^ ((polymorphic core morph) Kernel) Behavior: self
                                                     State: state
            );
             
            writeOn: w => w << 'a polymorph behavior';
        };
    };

    New => Instance new;
}
