
{
    isa std Clonable;

    |
        protected children
    |

    {
        init => (
            children <- std util newVector.
          ^ self
        );

        reparent: p => self;
        disconnect  => self;

        childrenDo:        block => children do:        block;
        childrenReverseDo: block => children reverseDo: block;

        addChild: child => (
            children add: child.
          ^ self
        );

        removeChild: child => (
            children remove: child.
          ^ self
        );

        writeOn: w => w << 'a node';
    }
}
