
{
    isa std Classlike;

    Instance :: Clonable
    {
        with inherited Node :: $package;

        |
            parent <- No,
            morph
        |

        {
            initWithMorph: m => (
                $(Node) init.
                parent <- No.
                morph  <- m.
              ^ self
            );

            world => (parent) yes: [ :p | ^ p world ] no: [ ^ No ];

            reparent: p => (
                parent <- Yes: p.
                p addChild: self.
              ^ self
            );

            disconnect => (
                p removeChild: self.
                parent <- No.
              ^ self
            );

            writeOn: w => (
                w << 'a morph node'.
                parent yes: [ :p |
                    w << ' (parent is ' << p << ')'.
                ].
            );
        }
    };

    Morph: morph => (Instance clone) initWithMorph: morph;
}
