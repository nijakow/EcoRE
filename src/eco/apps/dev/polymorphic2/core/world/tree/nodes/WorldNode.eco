
{
    isa std Classlike;

    Instance :: Clonable
    {
        with inherited Node :: $package;

        |
            world
        |

        {
            initWithWorld: w => (
                $(Node) init.
                world <- Yes: w.
              ^ self
            );

            parent => No;

            reparent: p => self;
            disconnect  => self;

            writeOn: w => w << 'a world node';
        }
    };

    World: world => (Instance clone) initWithWorld: world;
}
