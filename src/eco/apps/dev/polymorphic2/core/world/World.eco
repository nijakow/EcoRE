
{
    isa std Classlike;

    Instance :: std Clonable
    {
        |
            node,
            morphs
        |

        {
            protected polymorphic <- $package;

            init => (
                node   <- (((polymorphic core morph) tree nodes) WorldNode) World: self.
                morphs <- std util newVector.
              ^ self
            );

            addMorph: morph => (
                morphs add: morph. "TODO, FIXME, XXX: Add only if not present!"
              ^ self
            );

            removeMorph: morph => (
                morphs remove: morph.
              ^ self
            );

            iAmDirty: morph => (
                (std io out << 'Dirty: ' << morph) newline commit.
                morph redrawInPlace.
              ^ self
            );

            iHaveChanged: morph => (
                (std io out << 'Changed: ' << morph) newline commit.
                morph redrawFreely.
              ^ self
            );

            writeOn: w => w << 'a polymorphic world';
        }
    };

    New => Instance new;
}
