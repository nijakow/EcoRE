
{
    isa std Classlike;

    Instance :: std Clonable
    {
        |
            node,
            morphs
        |

        {
            protected polymorphic <- $package;

            init => (
                node    <- (((polymorphic core morph) tree nodes) WorldNode) World: self.
                morphs  <- std util newVector.
              ^ self
            );

            addMorph: morph => (
                morphs add: morph. "TODO, FIXME, XXX: Add only if not present!"
              ^ self
            );

            removeMorph: morph => (
                morphs remove: morph.
              ^ self
            );

            iAmDirty: morph => (
                morph redrawInPlace.
              ^ self
            );

            iHaveChanged: morph => (
                morph redrawFreely.
              ^ self
            );

            tickAll => (
                (std io out << 'Iterating over morphs...') newline commit.
                morphs do: [ :each |
                    (std io out << 'Ticking ' << (each name)) newline commit.
                    each tick.
                ].
              ^ self
            );

            writeOn: w => w << 'a polymorphic world';
        }
    };

    New => Instance new;
}
