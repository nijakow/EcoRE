#=std/io/FDSegmentReader: {
    private fd;

    with inherited trait = {
        initWithFileDescriptor: _fd => (
            fd <- _fd.
          ^ self
        );

        nextSegment: size => fd read: size;
        nextSegment => nextSegment: 4096;
    };

    with inherited parent = #<:std/Clonable>;
}
