{
    static with inherited _ = std Module;
    with app = $;

    Main => (
        (framework actions open) tools Shell.
        (framework actions open) ui TextMessageBox: 'Hello, World!'.

        (framework actions open ui) BuildAndOpen: [ :ui |
            ui Window(300, 200,
                ui Center(ui Label: 'This is the main application window!')
            )
        ].
    );
}
